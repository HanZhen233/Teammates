<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="7dp"
    >
<!--队伍细节-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/competition_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:text="比赛名称"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:textColor="#FF4F4E4F"
                />

            <ImageView
                android:src="@drawable/circle1"
                android:layout_gravity="right"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_weight="1.45"
                android:id="@+id/imageView" />
        </LinearLayout>
        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求用户需求"
            android:textSize="18sp"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/edit_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:layout_margin="10dp"
            android:text="2018/4/11"/>

    </LinearLayout>
</android.support.v7.widget.CardView>